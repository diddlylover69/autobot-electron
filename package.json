{
  "name": "autobot-electron",
  "version": "1.0.0",
  "description": "AutoBot desktop app with ChatGPT-like UI",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.yourdomain.autobot",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "src/**/*"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "electron": "^26.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.0.0",
    "webpack": "^5.0.0",
    "babel-loader": "^8.0.0",
    "@babel/core": "^7.0.0",
    "@babel/preset-react": "^7.0.0"
  }
}
